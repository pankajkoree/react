<header class="bg-red-500 text-white p-4 shadow-md">
  <nav class="container mx-auto flex justify-between items-center">
    <ul class="flex space-x-4">
      <li>
        <a href="/" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300">airbnb</a>
      </li>

      <% if (isLoggedIn) { %>
        <li>
          <a href="/store/homeList" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300">Home list</a>
        </li>

        <li>
          <a href="/store/bookings" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300">Bookings</a>
        </li>
        <li>
          <a href="/store/favourites" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300">Favourites</a>
        </li>
        <li>
          <a href="/host/hostHomes" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300">Host Homes</a>
        </li>
        <li>
          <a href="/host/addHome" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300">Add Home</a>
        </li>

        <%}%>
          <li>
            <% if (!isLoggedIn) {%>
              <a href="/login" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300">Login</a>
          </li>
          <li>
            <a href="/signup" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300">Sign Up</a>
          </li>
          <% } else { %>
            <li>
              <form action="/logout" method="POST">
                <button type="submit"
                  class="hover:bg-red-400 py-2 px-4 rounded transition duration-300 hover:cursor-pointer">Logout</button>
              </form>
            </li>
            <% } %>

    </ul>
  </nav>
</header>